@using Blogio.ViewModels
@model PostViewModel

<div class="col-9 pt-4">
    <ul class="list-group">        
        <li class="list-group-item">
            <h4>@Model.Title</h4>
        </li>
        <li class="list-group-item">
            <img src="@Model.Picture" class="card-img-top p-4" alt="Sample Image" style="border-radius: 0; width: 90%;">
            <p>@Model.Text</p>
        </li>
    </ul>
    <a class="btn btn-outline-warning" href="javascript:history.go(-1)">Back</a>
</div>