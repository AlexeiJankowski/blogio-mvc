@using Blogio.ViewModels
@model CreateRoleViewModel

<div class="card mt-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="from-group">
            <label><h4 class="card-title">Role Name</h4></label>
            <div class="">
                <input asp-for="@Model.RoleName" class="form-control" style="width: 80%; float: left;"/>
                <button type="submit" class="btn btn-outline-danger" style="width: 20%;">Add Role</button>
            </div>
        </div>    
    </form>
    <div class="d-grid pb-3 pt-2">
        <a class="btn btn-outline-warning" asp-action="Index" style="width: 10%;">Roles List</a>
    </div> 
</div>

