@{
    ViewData["Title"] = "Blogio Roles Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.changes.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="Index">@ViewData["Title"]</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            @if(User.Identity.IsAuthenticated)
            { 
                @if(User.IsInRole("Writer") || User.IsInRole("Admin"))     
                {
                    <a class="nav-link" asp-controller="Home" asp-action="Index">User's View</a>     
                    <a class="nav-link" asp-controller="Writer" asp-action="Index">Writer's View</a>
                } 
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input class="nav-link btn" id="logout" type="submit" value="Log Out"/>
                </form>
            }
            else
            {
                <a class="nav-link" asp-controller="Account" asp-action="Login">Log In</a>
                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
            }   
        </div>
        </div>
    </div>
    </nav>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>    
</body>
</html>