@using Blogio.ViewModels
@model ChangeRoleViewModel

<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title">Role Edit for @Model.UserEmail</h4>

        <div class="card-text">
            <form method="post">
                <input type="hidden" asp-for="@Model.UserId">
                <div class="form-group p-2">
                    @foreach (var role in Model.AllRoles)
                    {
                        <label class="pt-1">@role.Name</label>
                        <input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")>
                        <br>
                    }
                </div>
                <div class="d-grid mt-2">
                    <button type="submit" class="btn btn-outline-warning" style="width: 10%;">Save</button>
                </div>                
            </form>
        </div>
    </div>
</div>



