@using Blogio.Models
@model Blogio.PaginatedList

@{
    var NewModel = Blogio.PaginatedList.TopRatedPosts(Model.Posts, 3, 1);
}

<h4>Top Rated Posts</h4>

<div class="row">
@foreach(var post in NewModel ?? new List<Post>()) {
    <div class="col-12">
        <div class="card mb-4" style="border: none">
            <div class="card-body">
                <h5 class="card-title">@post.Title</h5>
                <p class="card-text">@(new String(post.Text.Take(100).ToArray()))</p>
                <a class="btn btn-sm btn-outline-dark" asp-action="Details" asp-route-id="@post.PostId">Read More</a>
            </div>
        </div>
    </div>
}
</div> 