@using Blogio.ViewModels
@model EditUserViewModel

<div class="card mt-4">
    <div class="card-body col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group mb-2">
                <label asp-for="NickName"></label>
                <input asp-for="NickName" class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-warning" style="float: left">Submit</button>
            <a class="btn btn-outline-warning" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@Model.Id">Change Password</a>
        </form>        
    </div>
</div>